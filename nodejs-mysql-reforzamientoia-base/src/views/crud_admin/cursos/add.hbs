<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="cardbody">
                    <form action="/administracion/cursos/add" method="POST"autocomplete="off">
                        <div class="form-group">
                            <input type="text" name="nombre_curso" class="form-control" placeholder="Nombre Curso"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="cant_alumnos" class="form-control"
                                placeholder="Cantidad de alumnos" autofocus>
                        </div>
                        <div class="form-group">






                            <input list="browsers" class="form-control" name="id_colegio" id="browser"
                                placeholder="Colegio">
                            <datalist id="browsers">
                                {{#each colegios}}
                                <option value={{id}}-{{nombre}}>
                                    {{/each}}
                            </datalist>
                            
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>