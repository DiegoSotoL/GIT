<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="cardbody">
                    <form action="/administracion/asignaturas/edit/{{asignatura.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value = "{{asignatura.nombre_asignatura}}" name="nombre_asignatura" class="form-control" placeholder="Nombre Asignatura"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value = "{{asignatura.promedio}}" name="promedio" class="form-control"
                                placeholder="Promedio" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value = "{{asignatura.id_profesor}}" name="id_profesor" class="form-control" placeholder="ID Profesor"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>    
                </div>
            </div>
        </div>
    </div>
</div>