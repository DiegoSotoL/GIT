<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="cardbody">
                    <form action="/administracion/asignaturas/add" method="POST" autocomplete="off">
                        <div class="form-group">
                            <input type="text" name="nombre_asignatura" class="form-control"
                                placeholder="Nombre Asignatura" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="promedio" class="form-control" placeholder="Promedio" autofocus>

                        </div>
                        <div class="form-group">

                            <input list="browsers" class="form-control" name="id_profesor" id="browser"
                                placeholder="Profesor">
                            <datalist id="browsers">
                                {{#each profesores}}
                                <option value={{id}}-{{nombre_completo}}>
                                    {{/each}}
                            </datalist>


                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>