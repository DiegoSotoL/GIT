<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="cardbody">
                    <form action="/profesores/notas/edit/{{nota.id}}" method="POST"autocomplete="off">
                        <div class="form-group">
                            <input type="text" value = "{{nota.nombre_actividad}}" name="nombre_actividad" class="form-control" placeholder="Nombre actividad" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value = "{{nota.clasificacion}}" name="clasificacion" class="form-control" placeholder="Nota" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" readonly="readonly" value = "{{nota.id_alumno}}" name="id_alumno" class="form-control" placeholder="ID Alumno" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" readonly="readonly" value = "{{nota.id_asignatura}}" name="id_asignatura" class="form-control" placeholder="ID Asignatura" autofocus>
                        </div>
                        
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>    
                </div>
            </div>
        </div>
    </div>
</div>