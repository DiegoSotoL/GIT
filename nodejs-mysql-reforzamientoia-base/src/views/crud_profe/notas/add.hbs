<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="cardbody">
                    <form action="/profesores/notas/add" method="POST">
                        <h3 style="text-align:center">Agregar Nota Alumnno</h3>
                        <div class="form-group">
                            <input type="text" name="nombre_actividad" class="form-control" placeholder="Actividad"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="clasificacion" class="form-control" placeholder="Nota" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="id_alumno" class="form-control" placeholder="Rut Alumno" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="id_asignatura" class="form-control" placeholder="ID Asignatura" autofocus>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>