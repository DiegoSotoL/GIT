<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="cardbody">
                    <form action="/administracion/colegios/edit/{{colegio.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value = "{{colegio.nombre}}" name="nombre" class="form-control" placeholder="Nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value = "{{colegio.direccion}}" name="direccion" class="form-control" placeholder="Direccion" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value = "{{colegio.telefono}}" name="telefono" class="form-control" placeholder="Telefono" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value = "{{colegio.correo}}" name="correo" class="form-control" placeholder="Correo" autofocus>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>    
                </div>
            </div>
        </div>
    </div>
</div>