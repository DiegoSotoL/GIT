<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="cardbody">
                    <form action="/administracion/preguntas/edit/{{pregunta.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value = "{{pregunta.pregunta}}" name="pregunta" class="form-control" placeholder="Pregunta"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value = "{{pregunta.nivel}}" name="nivel" class="form-control"
                                placeholder="Nivel" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value = "{{pregunta.ruta_imagen}}" name="ruta_imagen" class="form-control" placeholder="IMAGEN"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value = "{{pregunta.id_unidad}}" name="id_unidad" class="form-control" placeholder="ID Unidad"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>    
                </div>
            </div>
        </div>
    </div>
</div>