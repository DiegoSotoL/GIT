<div class="container p-4">
    <div class="row">
        {{#each preguntas}}
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class = "card-title text-uppercase">
                            {{pregunta}}  
                        </h3>
                        <p style="font-size:14px; color:#db330f">{{timeago ultima_modificacion}}</p>
                        <p class = "m-2">{{nivel}}</p>
                        <p class = "m-2">{{ruta_imagen}}</p>
                        <p class = "m-2">{{id_unidad}}</p>
                        <a href="/administracion/preguntas/delete/{{id}}"class ="btn btn-danger">BORAR</a>
                        <a href="/administracion/preguntas/edit/{{id}}"class ="btn btn-secondary">EDITAR</a>
                    </div>    
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>NO HAY PREGUNTAS REGISTRADAS</p>
                    <a href="/administracion/preguntas/add">REGISTRAR</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>